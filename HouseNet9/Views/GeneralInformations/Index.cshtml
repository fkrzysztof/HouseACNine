@model IEnumerable<Data.Data.HouseRentalData.GeneralInformation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if(item.Image != null) 
                {
                    <img src="@Url.Content("~/uploads/" + item.Image.Path)" alt="Przesłany obraz" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GeneralInformationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GeneralInformationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GeneralInformationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


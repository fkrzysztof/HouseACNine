@model Data.Data.HouseRentalData.DescriptionPage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/imagepreview.js"></script>
}




<h4><img src="~/uploads/add_notes.svg" class="mr-2" />Dodaj opis do strony</h4>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-9">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Html.DisplayFor(Model => Model.Description)</label>
                <textarea class="form-control" asp-for="Description" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="Description" class="control-label">Grafika</label>
                <img id="preview" src="~/uploads/noimg.png" alt="Podgląd obrazu" style="max-width: 100%;">
                <input type="file" name="file" id="fileInput" accept="image/*" />
            </div>
            <div class="form-group align-self-end">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>

<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

